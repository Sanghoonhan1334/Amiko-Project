# ============================================
# Amiko 프로젝트 환경 변수 설정 예시
# ============================================
# 이 파일을 복사하여 .env.local 파일을 만들고 실제 값으로 채워주세요.
# .env.local 파일은 Git에 커밋하지 마세요!

# ============================================
# Supabase 설정
# ============================================
# Supabase 프로젝트 URL (공개)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anon Key (공개, 클라이언트에서 사용)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (서버 전용, 절대 클라이언트에 노출 금지)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ============================================
# Toss Payments 설정 (한국 사용자용)
# ============================================
# Toss Payments 클라이언트 키 (공개)
NEXT_PUBLIC_TOSS_CLIENT_KEY=your_toss_client_key

# Toss Payments 시크릿 키 (서버 전용)
TOSS_SECRET_KEY=your_toss_secret_key

# Toss Payments 웹훅 시크릿 키
TOSS_WEBHOOK_SECRET_KEY=your_toss_webhook_secret_key

# ============================================
# PayPal 설정 (라틴아메리카 사용자용, 구현 예정)
# ============================================
# PayPal 클라이언트 ID (공개)
NEXT_PUBLIC_PAYPAL_CLIENT_ID=your_paypal_client_id

# PayPal 클라이언트 시크릿 (서버 전용)
PAYPAL_CLIENT_SECRET=your_paypal_client_secret

# PayPal API Base URL (sandbox 또는 production)
# 개발: https://api-m.sandbox.paypal.com
# 운영: https://api-m.paypal.com
PAYPAL_API_BASE_URL=https://api-m.sandbox.paypal.com

# ============================================
# 푸시 알림 설정 (VAPID 키)
# ============================================
# VAPID 공개키 (공개)
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key

# VAPID 개인키 (서버 전용)
VAPID_PRIVATE_KEY=your_vapid_private_key

# ============================================
# 번역 서비스 설정
# ============================================
# OpenAI API 키 (GPT 번역 사용 시)
OPENAI_API_KEY=your_openai_api_key

# Google Translate API 키 (Google 번역 사용 시)
GOOGLE_TRANSLATE_API_KEY=your_google_translate_api_key

# ============================================
# SMS/WhatsApp 설정 (Twilio)
# ============================================
# Twilio 계정 SID
TWILIO_ACCOUNT_SID=your_twilio_account_sid

# Twilio 인증 토큰
TWILIO_AUTH_TOKEN=your_twilio_auth_token

# Twilio 기본 전화번호
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Twilio 지역별 전화번호 (선택사항)
TWILIO_PHONE_NUMBER_CL=your_twilio_phone_number_chile
TWILIO_PHONE_NUMBER_MX=your_twilio_phone_number_mexico
TWILIO_PHONE_NUMBER_PE=your_twilio_phone_number_peru

# Twilio WhatsApp 설정
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_WHATSAPP_NUMBER=your_twilio_whatsapp_number
TWILIO_WHATSAPP_TEMPLATE_SID=your_twilio_whatsapp_template_sid

# ============================================
# SMS 설정 (Bird - 대체 서비스)
# ============================================
# Bird API 키 (선택사항)
BIRD_API_KEY=your_bird_api_key

# Bird 발신자 ID
BIRD_SENDER_ID=AMIKO

# ============================================
# 이메일 설정 (SMTP)
# ============================================
# SMTP 호스트
SMTP_HOST=smtps.hiworks.com

# SMTP 포트
SMTP_PORT=465

# SMTP 사용자명
SMTP_USER=your_smtp_user

# SMTP 비밀번호
SMTP_PASS=your_smtp_password

# ============================================
# 앱 기본 설정
# ============================================
# 앱 기본 URL
APP_URL=http://localhost:3000

# Next.js 공개 기본 URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# ============================================
# 기능 플래그 (선택사항)
# ============================================
# 스토리 기능 활성화
NEXT_PUBLIC_ENABLE_STORIES=true

# 생체인증 기능 활성화
NEXT_PUBLIC_BIOMETRIC_ENABLED=true

# ============================================
# 분석/추적 설정 (선택사항)
# ============================================
# Google Analytics 4 Measurement ID
NEXT_PUBLIC_GA4_MEASUREMENT_ID=your_ga4_measurement_id

# Google Analytics Measurement ID (레거시)
NEXT_PUBLIC_GA_MEASUREMENT_ID=your_ga_measurement_id

# ============================================
# YouTube API 설정 (선택사항)
# ============================================
# YouTube Data API 키
NEXT_PUBLIC_YOUTUBE_API_KEY=your_youtube_api_key

# ============================================
# 참고사항
# ============================================
# 1. NEXT_PUBLIC_ 접두사가 붙은 변수는 클라이언트에서 접근 가능합니다.
# 2. 서버 전용 변수는 절대 클라이언트에 노출되지 않도록 주의하세요.
# 3. 프로덕션 환경에서는 반드시 실제 키로 교체하세요.
# 4. .env.local 파일은 .gitignore에 포함되어 있어 Git에 커밋되지 않습니다.
